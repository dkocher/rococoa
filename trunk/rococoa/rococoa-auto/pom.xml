<project xmlns="http://maven.apache.org/POM/4.0.0"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
 <modelVersion>4.0.0</modelVersion>
  
 <groupId>org.rococoa</groupId>
  <artifactId>rococoa-auto</artifactId>
  <packaging>jar</packaging>
  <version>${parent.version}</version>
  <name>Rococoa Autogenerated Cocoa Package</name>
  <url>http://www.rococoa.org</url>
  
  <developers>
		<developer>
			<id>olivier.chafik</id>
			<name>Olivier Chafik</name>
			<email>olivier.chafik@gmail.com</email>
		</developer>
	</developers>

  <parent>
    <groupId>org.rococoa</groupId>
    <artifactId>rococoa-parent</artifactId>
    <version>0.5</version>
	<relativePath>../rococoa-parent</relativePath>
  </parent>
  
  <dependencies>
	
	<dependency>
	  <groupId>com.jnaerator</groupId>
	  <artifactId>jnaerator-runtime</artifactId>
	  <version>${jnaerator.version}</version>
	  <scope>compile</scope>
	</dependency>
  	
  	<dependency>
	  <groupId>org.rococoa</groupId>
	  <artifactId>rococoa-core</artifactId>
	  <version>${rococoa.version}</version>
	  <scope>compile</scope>
	</dependency>
	
  </dependencies>

  <build>
  	<plugins>
	
	  <plugin>
    	<groupId>org.apache.maven.plugins</groupId>
    	<artifactId>maven-compiler-plugin</artifactId>
    	<configuration>
    		<source>${maven.compile.source}</source>
    		<target>${maven.compile.target}</target>
    	</configuration>
      </plugin>
    
      

		<plugin>
			<groupId>com.jnaerator</groupId>
			<artifactId>maven-jnaerator-plugin</artifactId>
			<version>${jnaerator.version}</version>
			<configuration>
				<javaOutputDirectory>src/main/java</javaOutputDirectory>
			</configuration>
		</plugin>
		
	  <plugin>
		<groupId>org.apache.maven.plugins</groupId>
		<artifactId>maven-shade-plugin</artifactId>
		<version>1.2.1</version>
		<executions>
		  <execution>
			<phase>package</phase>
			<goals>
			  <goal>shade</goal>
			</goals>
		  </execution>
		</executions>
	  </plugin>
	  
	</plugins>
  </build>
  
  <reporting>
  	<plugins>
		  <plugin>
			<groupId>org.apache.maven.plugins</groupId>
			<artifactId>maven-javadoc-plugin</artifactId>
			<version>2.5</version>
			
			<configuration>
				<aggregate>true</aggregate>
				<minmemory>128m</minmemory>
				<maxmemory>512</maxmemory>
				<breakiterator>true</breakiterator>
				<quiet>true</quiet>
				<source>1.6</source>
				<verbose>false</verbose>
				<linksource>true</linksource>
				<show>public</show>
				<links>
					<link>http://java.sun.com/javase/6/docs/api/</link>
					<link>https://jna.dev.java.net/javadoc</link>
					<link>http://jnaerator.sourceforge.net/sites/jnaerator/apidocs</link>
					<link>http://jnaerator.sourceforge.net/sites/jnaerator-runtime/apidocs</link>
				</links>
			</configuration>
		  </plugin>
	  </plugins>
  </reporting>
  
</project>



